<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_fragment"
    android:theme="@style/ButtonTheme"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!---<android.support.v7.widget.AppCompatButton
        android:id="@+id/appCompatButtonSearch"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Search"
        android:layout_marginTop="10dp"
        android:textColor="#DDFFFFFF"
        style="@style/Widget.AppCompat.Button"/>
        -->

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/AppCompatImageView_emoji"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/AppCompatImageView_food"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView_FoodName"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textView_Suggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:visibility="gone"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/food_list"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/appCompatButtonhome"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:textColor="@color/buttonText"
        android:text="Back"
        style="@style/Widget.AppCompat.Button"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/appCompatButtonSearch"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textColor="@color/buttonText"
        android:visibility="gone"
        android:text="Search"
        style="@style/Widget.AppCompat.Button"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/appCompatButtonIngredient"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textColor="@color/buttonText"
        android:visibility="gone"
        android:text="Ingredients"
        android:layout_marginBottom="100dp"
        style="@style/Widget.AppCompat.Button"/>

    <LinearLayout
        android:id="@+id/choose_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton_scanner"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/image_btn_press" />


        <ImageButton
            android:id="@+id/imageButton_history"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/image_history_press" />
    </LinearLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/appCompatButtonClear"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textColor="@color/buttonText"
        android:visibility="gone"
        android:text="Clear"
        style="@style/Widget.AppCompat.Button"/>
    <TextView
        android:id="@+id/textView_barcode"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        android:text="0"
        android:layout_height="wrap_content"
        />


</LinearLayout>